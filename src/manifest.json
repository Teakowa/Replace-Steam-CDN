{
    "manifest_version": 2,
    "name": "Replace Steam CDN",
    "version": "1.1",
    "description": "Replace Steam CDN with Telescopium Lambda CDN.",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "webRequest", 
        "webRequestBlocking", 
        "*://store.steampowered.com/*",
        "*://steamcommunity.com/*",
        "*://steamcdn-a.akamaihd.net/*",
        "*://steamstore-a.akamaihd.net/*",
        "*://steamcommunity-a.akamaihd.net/*"
    ],
    "author": "https://github.com/dawoea",
    "homepage_url": "https://github.com/dawoea/ReplaceSteamCDN"
}